name: steamcannon-sandbox
version: 1
release: 0
summary: Developer sandbox with JBoss AS and PostgreSQL for SteamCannon
hardware:
  memory: 1024
  partitions:
    "/":
      size: 5
appliances:
  - steamcannon-torquebox-back-end
packages:
  includes:
    - postgresql-server
post:
  base:
    - "echo -e '\n  - PostgreSQL' >> /etc/sysconfig/steamcannon-agent"
    - "/sbin/chkconfig postgresql on"
