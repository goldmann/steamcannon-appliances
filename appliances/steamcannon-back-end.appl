name: steamcannon-back-end
version: 1
release: 3
summary: SteamCannon back-end appliance with JBoss AS 6
hardware:
  memory: 512
  partitions:
    "/":
      size: 2
appliances:
  - steamcannon-base
packages:
  includes:
    - jboss-as6
    - jboss-as6-cloud-profiles
post:
  base:
    - "echo -e '\n  - JBossAS' >> /etc/sysconfig/steamcannon-agent"
