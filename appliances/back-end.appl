name: back-end
version: 1
release: 2
summary: back-end appliance with JBoss AS 6
hardware:
  memory: 512
  partitions:
    "/":
      size: 2
appliances:
  - steamcannon-base
packages:
  includes:
    - jboss-as6
    - jboss-as6-cloud-profiles
post:
  base:
    - "echo -e 'services:\n  - JBossAS\nlog_level: trace' > /etc/sysconfig/steamcannon-agent"
