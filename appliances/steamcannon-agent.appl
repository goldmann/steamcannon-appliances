name: steamcannon-agent
summary: SteamCannon Agent for from latest git checkout
os:
  name: fedora
  version: 13
hardware:
  partitions:
    "/":
      size: 1
packages:
  includes:
    - bash
    - yum
    - vim-minimal
    - openssh-server
    - steamcannon-agent
post:
  base:
    - "echo 'cd /usr/share/steamcannon-agent && git pull' >> /etc/rc.local"
    - "echo 'cp /usr/share/steamcannon-agent/appliance/src/steamcannon-agent.init /etc/init.d/steamcannon-agent' >> /etc/rc.local"
    - "echo 'chmod +x /etc/init.d/steamcannon-agent' >> /etc/rc.local"
    - "echo '/etc/init.d/steamcannon-agent restart' >> /etc/rc.local"
repos:
  - name: "steamcannon-#ARCH#"
    baseurl: "http://repo.oddthesis.org/steamcannon/packages/#OS_NAME#/#OS_VERSION#/RPMS/#ARCH#"
  - name: "steamcannon-noarch"
    baseurl: "http://repo.oddthesis.org/steamcannon/packages/#OS_NAME#/#OS_VERSION#/RPMS/noarch"
